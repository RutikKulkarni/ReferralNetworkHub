# ==========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==========================================
# Copy this file to:
# - .env.local for local development
# - .env for production
# ==========================================

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=5000

# ==========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=referral_network_hub
DB_USER=postgres
DB_PASSWORD=postgres

# Database Connection Pool
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ==========================================
# JWT CONFIGURATION
# ==========================================
# IMPORTANT: Generate strong secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_TOKEN_SECRET=your_jwt_access_secret_change_in_production
JWT_REFRESH_TOKEN_SECRET=your_jwt_refresh_secret_change_in_production
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=ReferralNetworkHub
JWT_AUDIENCE=ReferralNetworkHub-API

# ==========================================
# SESSION CONFIGURATION
# ==========================================
SESSION_EXPIRY_SECONDS=3600
MAX_ACTIVE_SESSIONS_PER_USER=5

# ==========================================
# INVITE CONFIGURATION
# ==========================================
INVITE_EXPIRY_HOURS=48
ORG_ADMIN_INVITE_EXPIRY_HOURS=72

# ==========================================
# EMAIL CONFIGURATION (SMTP)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=noreply@referralnetworkhub.com

# ==========================================
# OAUTH CONFIGURATION
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
MAX_FILE_SIZE=10485760

# ==========================================
# CLIENT URL (Frontend)
# ==========================================
CLIENT_URL=http://localhost:3000

# ==========================================
# OPTIONAL: SERVICE API KEY
# ==========================================
# For internal service communication (if needed)
SERVICE_API_KEY=your_internal_service_api_key_here

