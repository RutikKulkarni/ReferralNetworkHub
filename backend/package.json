{
  "name": "referral-network-hub-backend",
  "version": "1.0.0",
  "description": "Backend for Referral Network Hub",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:prod": "cross-env NODE_ENV=production nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "build:prod": "npm run build && npm run start:prod",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed": "ts-node src/database/seeders/index.ts",
    "seed:prod": "cross-env NODE_ENV=production ts-node src/database/seeders/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:redis": "ts-node src/scripts/test-redis.ts",
    "test:prod": "cross-env NODE_ENV=production ts-node src/scripts/test-redis.ts",
    "postinstall": "test \"$NODE_ENV\" != \"production\" && husky install || echo 'Skipping husky in production'",
    "pre-commit": "npm run lint && npm run typecheck"
  },
  "keywords": [
    "referral",
    "network",
    "hub",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "rate-limit-redis": "^4.3.1",
    "sequelize": "^6.35.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.8.1",
    "rimraf": "^6.0.1",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
